{
  "name": "@repo/database",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "imports": {
    "#*": "./src/*.ts",
    "#scripts/*": "./scripts/*.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./db/*": "./src/db/*.ts",
    "./types/*": "./src/db/types/*.ts",
    "./db/schema": "./src/db/schema.ts"
  },
  "scripts": {
    "seed": "pnpm tsx ./src/seed.ts",
    "db:migrate": "pnpm drizzle-kit migrate --config=drizzle.config.ts ",
    "db:studio": "pnpm drizzle-kit studio --config=drizzle.config.ts ",
    "db:generate": "pnpm drizzle-kit generate --config=drizzle.config.ts ",
    "db:push": "pnpm drizzle-kit push --config=drizzle.config.ts && pnpm run seed"
  },
  "dependencies": {
    "@libsql/client": "latest",
    "@repo/ui": "workspace:*",
    "add": "^2.0.6",
    "dotenv": "latest",
    "drizzle-orm": "latest",
    "drizzle-zod": "^0.7.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "kysely": "latest",
    "pnpm": "^10.6.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "drizzle-kit": "latest",
    "eslint": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest"
  }
}
