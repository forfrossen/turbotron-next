{
  "name": "@repo/database",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "imports": {
    "#*": "./src/*.ts"
  },
  "exports": {
    ".": "./src/database.ts",
    "./types/*": "./src/db/types/*.ts",
    "./schemas/*": "./src/db/schemas/*.ts",
    "./defaults/*": "./src/db/defaults/*.ts"
  },
  "scripts": {
    "seed": "tsx scripts/seed.ts",
    "migrate": "drizzle-kit migrate --config=drizzle.config.ts ",
    "studio": "drizzle-kit studio --config=drizzle.config.ts ",
    "generate": "drizzle-kit generate --config=drizzle.config.ts ",
    "push": "drizzle-kit push --config=drizzle.config.ts && pnpm run seed"
  },
  "dependencies": {
    "@libsql/client": "latest",
    "@repo/ui": "workspace:*",
    "add": "^2.0.6",
    "dotenv": "latest",
    "drizzle-orm": "latest",
    "drizzle-zod": "^0.7.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "kysely": "latest",
    "pnpm": "^10.6.1"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "drizzle-kit": "latest",
    "eslint": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest"
  }
}
